.top-image
  background-image url("../../img/head-img.jpg")
  height 12.5em
  width 61.25em
  margin 0 auto

  .firm
    height 7.5625em
    width 20.75em
    padding ((12.5em - 7.5625em)/2)
    float left

    &__logo
      padding 1.75em 1.125em
      background #fff
      float left
      img
        display block

    &__name
      font-family: Verdana, sans-serif;
      font-size 1.25em
      margin-left (121/16/1.25)em
      padding (50.5/16/1.25)em (42/16/1.25)em
      background rgba(255,255,255,0.8)

  .phone
    float right
    padding-top (152/16)em
    &__text
      font-size (24/16)em
      font-family: 'Source Sans Pro', sans-serif;
      padding (12/24)em (24/24)em (12/24)em (37/24)em
      background rgba(255,255,255,0.8)

